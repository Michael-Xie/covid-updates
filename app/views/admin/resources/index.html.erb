<p id="notice"><%= notice %></p>

<h1>Resources</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Kind</th>
      <th>Priority</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.name %></td>
        <td><%= resource.url %></td>
        <td><%= resource.kind %></td>
        <td><%= resource.priority %></td>
        <td><%= resource.category_id %></td>
        <td><%= resource.user_id %></td>
        <td><%= link_to 'Show', admin_resource_path(resource) %></td>
        <td><%= link_to 'Edit', edit_admin_resource_path(resource) %></td>
        <td><%= link_to 'Destroy', admin_resource_path(resource), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Resource', new_admin_resource_path %>
